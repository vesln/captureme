#!/usr/bin/env node

/**
 * Dependencies.
 */

var fs = require('fs');
var argv = require('argvee')();
var debug = require('sherlock')('captureme');
var Batch = require('batch');
var path = require('path');
var _ = require('../util');
var Capturer = require('../capturer');
var env = process.env;

/**
 * Credentials.
 */

var user = env.SAUCE_USERNAME;
var key = env.SAUCE_ACCESS_KEY;

/**
 * Input.
 */

var url = (argv.param('url') || [])[0];
var dest = (argv.param('dest') || [ path.resolve('.') ])[0];

try {
  var browsers = _.parseBrowsers(argv.param('browsers'));
} catch(e) {
  _.error(e.message);
}

/**
 * Validate input.
 */

if (!url) _.error('`--url` is missing');
if (!browsers.length) _.error('`--browsers` is missing');

/**
 * Start taking screenshots.
 */

var batch = new Batch;

browsers.forEach(function(browser) {
  batch.push(function(done) {
    var capturer = new Capturer(user, key, browser);
    capturer.capture(url, function(err, data) {
      if (err) return done(err);
      fs.writeFile(_.filePath(dest, browser.alias, url), data, 'base64', done);
    });
  });
});

/**
 * Done.
 */

batch.end(function(err) {
  if (err) throw err;
  process.exit(0);
});
