#!/usr/bin/env node

/**
 * Dependencies.
 */

var fs = require('fs');
var argv = require('argvee')();
var debug = require('sherlock')('captureme:cli');
var Batch = require('batch');
var resolve = require('path').resolve;
var _ = require('../util');
var Capturer = require('../capturer');
var env = process.env;

/**
 * Credentials.
 */

var user = env.SAUCE_USERNAME;
var key = env.SAUCE_ACCESS_KEY;

/**
 * Input.
 */

var url = (argv.param('url') || [])[0];
var dest = (argv.param('dest') || [ resolve('.') ])[0];

try {
  var browsers = _.parseBrowsers(argv.param('browsers'));
} catch(e) {
  _.error(e.message);
}

/**
 * Simple input validation.
 */

if (!url) _.error('`--url` is missing');
if (!browsers.length) _.error('`--browsers` is missing');

debug('user: %s', user);
debug('url: %s', url);
debug('browsers: %j', browsers);

/**
 * Setup the batch.
 */

var batch = new Batch;

browsers.forEach(function(browser) {
  batch.push(function(done) {
    var capturer = new Capturer(user, key, browser);
    capturer.capture(url, function(err, data) {
      if (err) return done(err);
      var filePath = _.filePath(dest, browser.alias, url);
      debug('store file: %s', filePath);
      fs.writeFile(filePath, data, 'base64', done);
    });
  });
});

batch.on('progress', function(e) {
  debug('progress: ' + e.percent + '%');
});

/**
 * Done.
 */

batch.end(function(err) {
  debug('done');
  if (err) throw err;
  process.exit(0);
});
